---
import  WaaklabsBanner from '../assets/images/banner.png'
import { faqList } from "../data/faq";
import Logo from '../assets/images/logo-black.svg'

const sameas = [
    "https://twitter.com/waaklabs",
    "https://www.instagram.com/waaklabs/",
    "https://www.linkedin.com/company/waak-labs/",
    "https://github.com/devwaseem/",
    "https://waaklabs.com",
]
---

<>
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "localbusiness",
        "name": "Waak Labs",
        "image": Logo.src,
        "@id": "waak-labs",
        "url": "https://waaklabs.com",
        "telephone": "+91 8248899344",
        "address": {
            "@type": "postaladdress",
            "streetaddress": "52/18 Mannarysamy koil street, Pulianthope",
            "addresslocality": "Chennai",
            "postalcode": "600012",
            "addresscountry": "India"
        },
        "openinghoursspecification": {
            "@type": "openinghoursspecification",
            "dayofweek": [
                "monday",
                "wednesday",
                "tuesday",
                "thursday",
                "friday",
                "saturday",
                "sunday"
            ],
            "opens": "10:00",
            "closes": "22:00"
        },
        "sameas": sameas
    })}>
        
    </script>
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "corporation",
        "name": "Waak Labs",
        "url": "https://waaklabs.com",
        "logo": Logo.src,
        "contactpoint": {
            "@type": "contactpoint",
            "telephone": "+91 8248899344",
            "contacttype": "customer service",
            "availablelanguage": "en"
        },
        "sameas": sameas
    })}>
    </script>
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org/",
        "@type": "person",
        "name": "Waseem Akram",
        "url": "https://waaklabs.com",
        "image": WaaklabsBanner.src,
        "sameas": sameas,
        "jobtitle": "Founder & CEO",
        "worksfor": {
            "@type": "organization",
            "name": "Waak Labs"
        }
    })}>
    </script>
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org/",
        "@type": "website",
        "name": "Waak Labs",
        "url": "https://waaklabs.com"
    })}>
    </script>
    <script
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "FAQPage",
            mainentity: faqList.map((faq) => ({
                "@type": "question",
                name: faq.question,
                acceptedanswer: {
                    "@type": "answer",
                    text: faq.answer,
                },
            })),
        })}
    />
</>
