---
import MinimalButton from "../../components/minimal-button.astro";
import { services } from "../../data/services";
---

<div class="relative z-20 bg-gray-50 py-40 lg:py-60">
    <div class="mx-auto max-w-7xl px-10">
        <div
            class="mx-auto max-w-4xl pb-10 text-6xl font-medium lg:pb-40 lg:text-7xl">
            Our digital services make your brand presence a breeze
        </div>
        <div class="relative mx-auto max-w-6xl">
            {
                services.map((service) => (
                    // <div class="border bg-gray-100 p-10">
                    //     <div class="text-3xl font-medium">{service.title}</div>
                    //     <div class="mt-6 text-lg">{service.description}</div>
                    // </div>
                    <div
                        id={service.id}
                        class="grid grid-cols-3 border-b border-gray-200 py-20 first:border-y">
                        <div class="text-2xl font-medium">{service.title}</div>
                        <div class="col-span-2 max-w-2xl text-lg">
                            <div>{service.description}</div>
                            <div class="mt-2">Eg: {service.examples}</div>
                            <div class="mt-6">
                                <MinimalButton
                                    text="Get Started"
                                    href="/contact"
                                />
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>
