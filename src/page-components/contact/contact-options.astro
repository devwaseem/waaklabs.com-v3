---
import HoverScrollText from "../../components/hover-scroll-text.astro";
---

<div
    class="mx-auto grid max-w-5xl grid-cols-1 gap-6 px-6 py-20 md:grid-cols-2 md:px-10">
    <div class="bg-gray-50 p-10 md:col-span-2">
        <div class="text-2xl font-medium">Contact Us</div>
        <div class="mt-6">
            Reach out to us for any inquiries, questions, or discussions you
            have in mind.
        </div>
        <div class="mt-8 flex flex-col">
            <a
                onclick="gtag('event', 'Contact', { type: 'email' })"
                href="mailto:hello@waaklabs.com"
                class="group"
                >E: <span class="group-hover:underline">hello@waaklabs.com</span
                ></a
            >
            <a
                href="tel:+918248899344"
                onclick="gtag('event', 'Contact', { type: 'phone' })"
                class="group mt-2"
                >P: <span class="group-hover:underline">+91 8248899344</span></a
            >
            <a
                href="https://wa.me/message/TGUEAHLEG52PO1"
                onclick="gtag('event', 'Contact', { type: 'phone' })"
                class="group mt-2"
                >Whatsapp: <span class="group-hover:underline"
                    >+91 8248899344</span
                ></a
            >
        </div>
    </div>
    <div class="bg-gray-50 p-10">
        <div class="text-2xl font-medium">Schedule a free consultation</div>
        <div class="mt-6">
            Book a consultation with us through our calendly scheduling link and
            let's discuss your project.
        </div>
        <div class="mt-8">
            <!-- Calendly link widget begin -->
            <link
                href="https://assets.calendly.com/assets/external/widget.css"
                rel="stylesheet"
            />
            <script
                is:inline
                src="https://assets.calendly.com/assets/external/widget.js"
                type="text/javascript"
                async></script>
            <button
                onclick="gtag('event', 'Contact', { type: 'meeting', item: 'calendly' }); Calendly.initPopupWidget({url: 'https://calendly.com/waak/meeting-with-waseem'});return false;"
                class="bg-primary-800 px-4 py-3 text-white"
                ><HoverScrollText>
                    Schedule a Free Consultation
                </HoverScrollText></button
            >
            <!-- Calendly link widget end -->
        </div>
    </div>
    <div class="bg-gray-50 p-10">
        <div class="text-2xl font-medium">Live Chat</div>
        <div class="mt-6">
            Click the live chat button for real-time support and immediate
            answers to your queries.
        </div>
        <div class="mt-8">
            <button
                onclick="gtag('event', 'Contact', { type: 'Live Chat', item: 'Drift' }); drift.api.openChat();"
                class="bg-primary-800 px-4 py-3 text-white"
                ><HoverScrollText>Start Chat</HoverScrollText></button
            >
        </div>
    </div>
</div>
